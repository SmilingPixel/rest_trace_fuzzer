        {
            "type": "shell",
            "label": "Build",
            "command": "make build",
        },
        {
            "type": "shell",
            "label": "Run",
            "command": "make run",
        },
        {
            "type": "shell",
            "label": "Clean",
            "command": "make clean",
        }
    ]
}